# vim:ts=8

uncolor index *
uncolor header *
uncolor body *

color attachment	black		green
color hdrdefault	red		default
color quoted		red		default
color error		red		default
color search		default		yellow
color status		brightwhite	black
color tree		red		default
color normal		default		default
color tilde		blue		default
color bold		blue		default
color markers		red		default
color header		blue		default "^(From|Subject|Date):"

color indicator		brightwhite	blue
color index		brightblue	default ~N
color index		blue		default ~O
color index		brightwhite	black ~D

color body	blue	default		"(http|https|ftp|news|telnet|finger)://[^ \">\t\r\n]*"
color body	blue	default		"mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
color body	blue	default		"news:[^ \">\t\r\n]*"
color body	blue	default		"[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
color body	blue	default		"(^|[[:space:]])\\*[^[:space:]]+\\*([[:space:]]|$)" # *Bold* text.
color body	blue	default		"(^|[[:space:]])_[^[:space:]]+_([[:space:]]|$)"     # _Underlined_ text.
color body	blue	default		"(^|[[:space:]])/[^[:space:]]+/([[:space:]]|$)"     # /Italic/ text.
