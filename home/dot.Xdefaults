! $hgid:

! Hide pointer when typing.
XTerm*pointerMode: 2

! Lines of scrollback.
XTerm*saveLines: 1024

! Run as login shell.
XTerm*loginShell: True

! No scollbar
XTerm*scrollBar: False

! Use UTF-8
XTerm*locale: UTF-8

! Nice font
XTerm*faceName: DejaVu Sans Mono:pixelsize=16

! Do not clear terminals after {man,vim,etc.}
XTerm*titeInhibit: true
