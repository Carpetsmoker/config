# vim:syntax=config
#
# http://www.pekwm.org/files/pekwm/doc/0.1.7/html/config/autoprops.html


Property = ".*,^Opera" {
	ApplyOn = "New Start Reload Transient Workspace"
	Workspace = "2"
}
Property = ".*,^Firefox" {
	ApplyOn = "New Start Reload Transient Workspace"
	Workspace = "2"
}

Property = "mtournoij - Skype (Beta)" {
	ApplyOn = "New Start Reload Transient Workspace"
	Focusable = "False"
	Sticky = "True"
}

Property = ".*,^Pidgin" {
	ApplyOn = "New Start Reload Transient Workspace"
	Sticky = "True"
	Skip = "FocusToggle"
}

Property = ".*,^ncmpc" {
	ApplyOn = "New Start Reload Transient Workspace"
	Sticky = "True"
	Skip = "FocusToggle"
}
