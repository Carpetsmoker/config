#!/bin/sh
#

set -euC

devs=$(echo 'devices' | bluetoothctl | grep '^Device')

IFS="
"
i=1
for dev in $(echo "$devs" | cut -d ' ' -f3-); do
	echo "$(( i++ )) $dev"
done

printf "Which? "
read n
mac=$(echo "$devs" | sed "${n}p;d" | cut -d ' ' -f2)

echo 'power on'     | bluetoothctl
echo "connect $mac" | bluetoothctl
