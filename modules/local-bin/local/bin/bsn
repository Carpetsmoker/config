#!/usr/bin/env ruby
#
# Generate BSN
#

def check value
	total = 0
	if value.to_s.length == 9
		8.times { |x| total += value[x].to_i * (9-x) }
		total -= value[8].to_i
	end

	return false if total.modulo(11) != 0 || value.length != 9
	return true
end


def mkbsn
	while true
		bsn = ''
		(0..8).each { bsn += '%s' % rand(0..9) }
		return bsn if check bsn
	end
end

puts mkbsn
