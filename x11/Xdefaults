! Hide pointer when typing.
XTerm*pointerMode: 2

! Lines of scrollback.
XTerm*saveLines: 4096

! Run as login shell.
!XTerm*loginShell: True

! No scollbar
XTerm*scrollBar: False

! Use UTF-8
XTerm*locale: UTF-8

! Nice font
XTerm*faceName: DejaVu Sans Mono
!XTerm*faceName: Go Mono
XTerm*faceSize: 12
XTerm*faceSize1: 12
XTerm*faceSize2: 12
XTerm*faceSize3: 12

! Medium
XTerm*faceSize4: 14
! Large
XTerm*faceSize5: 16
! Huge
XTerm*faceSize6: 18

! Do not clear terminals after {man,vim,etc.}
XTerm*titeInhibit: true

! Triple-clicking a line does *not* copy the newline
XTerm*cutNewline: off

! <Alt> + key also works (and not just <Esc> key)
XTerm*metaSendsEscape: true

! https://lukas.zapletalovi.com/2013/07/hidden-gems-of-xterm.html
! XTerm*on3Clicks: regex ([[:alpha:]]+://)?([[:alnum:]!#+,./=?@_~-]|(%[[:xdigit:]][[:xdigit:]]))+
! XTerm*translations: #override Shift <Btn1Up>: exec-formatted("chromium '%t'", PRIMARY)

! TODO: Messes up backgrounds... But the problem is that braindead applications
! set color7 as the foreground, which is nigh-unreadable with a white bg.
! However, this will do the reverse: make black on color7 unreadable :-/
! XTerm*color7: gray20
! XTerm*color8: gray40

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

! rxvt-unicode

! Hide pointer when typing.
urxvt*pointerBlank: true

! Lines of scrollback.
urxvt*saveLines: 4096

! Run as login shell.
!urxvt*loginShell: True

! No scollbar
urxvt*scrollBar: False

! Nice font
urxvt*font: xft:DejaVu Sans Mono:pixelsize=16

! Do not clear terminals after {man,vim,etc.}
urxvt*secondaryScreen: false
